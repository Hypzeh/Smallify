<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="MainBackground">#2C2C2D</Color>
    <SolidColorBrush
        x:Key="MainBackgroundBrush"
        Color="{StaticResource MainBackground}" />

    <Color x:Key="PrimaryText">#FFFFFF</Color>
    <SolidColorBrush
        x:Key="PrimaryTextBrush"
        Color="{StaticResource PrimaryText}" />

    <Color x:Key="Highlight">#00D66E</Color>
    <SolidColorBrush
        x:Key="HighlightBrush"
        Color="{StaticResource Highlight}" />
</ResourceDictionary>