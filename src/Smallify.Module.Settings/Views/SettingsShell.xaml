<Window x:Class="Smallify.Module.Settings.Views.SettingsShell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Smallify.Module.Settings.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Settings"
        Width="600"
        Height="300"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStyle="None"
        mc:Ignorable="d">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="{Binding ElementName=TitleRow, Path=ActualHeight}"
                      CornerRadius="0"
                      GlassFrameThickness="0"
                      NonClientFrameEdges="None"
                      ResizeBorderThickness="0"
                      UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>


    <Border Background="{DynamicResource MainBackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition x:Name="TitleRow"
                               Height="25" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border x:Name="TitleBar"
                    Grid.Row="0"
                    BorderBrush="{DynamicResource ControlHighlightBrush}"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0">
                        <TextBlock Padding="5,0,0,0"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   Text="Settings" />
                    </Border>

                    <Border Grid.Column="2"
                            WindowChrome.IsHitTestVisibleInChrome="True">
                        <UniformGrid Columns="1">
                            <Button Command="{Binding Path=ExitCommand, Mode=OneWay}"
                                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"
                                    Style="{StaticResource TitleBarExitButtonStyle}">
                                <TextBlock FontWeight="SemiBold"
                                           Text="🗙" />
                            </Button>
                        </UniformGrid>
                    </Border>
                </Grid>
            </Border>

            <Border x:Name="SettingsContent"
                    Grid.Row="1">
                <local:SettingsView />
            </Border>
        </Grid>
    </Border>
</Window>
