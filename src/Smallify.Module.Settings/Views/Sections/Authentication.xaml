<UserControl x:Class="Smallify.Module.Settings.Views.Sections.Authentication"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Smallify.Module.Settings.Views.Sections"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="275"
             d:DesignWidth="500"
             mc:Ignorable="d">

    <Border>
        <StackPanel VerticalAlignment="Center">
            <Border>
                <StackPanel>
                    <TextBlock Foreground="{DynamicResource PrimaryTextBrush}"
                               Text="Access Token" />
                    <TextBox Text="{Binding Path=AccessToken, Mode=TwoWay}" />
                </StackPanel>
            </Border>

            <Border>
                <UniformGrid Rows="1">
                    <Button Command="{Binding Path=GetAccessTokenCommand, Mode=OneWay}"
                            Content="Get Access Token (Opens in browser)" />
                    <Button Command="{Binding Path=PasteAccessTokenCommand, Mode=OneWay}"
                            Content="Paste From Clipboard" />
                </UniformGrid>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
