<UserControl x:Class="Smallify.Module.Player.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Smallify.Module.Player.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:samples="clr-namespace:Smallify.Module.Player.Samples"
             d:DataContext="{d:DesignInstance Type=samples:PlayerViewModelData,
                                              IsDesignTimeCreatable=True}"
             d:DesignHeight="200"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />

        <Style x:Key="ButtonStyle"
               BasedOn="{StaticResource {x:Type Button}}"
               TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="Gray" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                                Background="{DynamicResource MainBackgroundBrush}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Green" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="5" />
            </Grid.RowDefinitions>

            <Border x:Name="AlbumArt"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}">
                <Image Source="{Binding Path=TrackAlbumArtURL, Mode=OneWay}" />
            </Border>

            <Border x:Name="TrackDetails"
                    Grid.Column="1">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock FontSize="28"
                               Foreground="White"
                               Text="{Binding Path=TrackName, Mode=OneWay, FallbackValue='...'}" />
                    <TextBlock FontSize="28"
                               Foreground="White"
                               Text="{Binding Path=TrackArtist, Mode=OneWay, FallbackValue='...'}" />
                    <TextBlock FontSize="28"
                               Foreground="White"
                               Text="{Binding Path=TrackAlbumName, Mode=OneWay, FallbackValue='...'}" />
                </StackPanel>
            </Border>

            <Border x:Name="PlayerControls"
                    Grid.Column="2"
                    MinHeight="50"
                    MaxHeight="100">
                <UniformGrid Columns="3">
                    <Button Margin="20"
                            Command="{Binding Path=PreviousCommand, Mode=OneWay}"
                            Style="{StaticResource ButtonStyle}">
                        <Path Data="{StaticResource Previous}"
                              Fill="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}, Path=Foreground}"
                              Stretch="UniformToFill" />
                    </Button>

                    <Grid>
                        <Button Command="{Binding Path=PlayCommand, Mode=OneWay}"
                                Style="{StaticResource ButtonStyle}">
                            <Path Data="{StaticResource Play}"
                                  Fill="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}, Path=Foreground}"
                                  Stretch="UniformToFill" />
                        </Button>
                        <Button Command="{Binding Path=PauseCommand, Mode=OneWay}"
                                Style="{StaticResource ButtonStyle}"
                                Visibility="{Binding Path=IsPlaying, Converter={StaticResource BoolToVisibility}}">
                            <Path Data="{StaticResource Pause}"
                                  Fill="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}, Path=Foreground}"
                                  Stretch="UniformToFill" />
                        </Button>
                    </Grid>

                    <Button Margin="20"
                            Command="{Binding Path=SkipCommand, Mode=OneWay}"
                            Style="{StaticResource ButtonStyle}">
                        <Path Data="{StaticResource Skip}"
                              Fill="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}, Path=Foreground}"
                              Stretch="UniformToFill" />
                    </Button>
                </UniformGrid>
            </Border>

            <Border x:Name="TrackLength"
                    Grid.Row="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="2">
                <Border Background="Green" />
            </Border>
        </Grid>
    </Border>
</UserControl>
