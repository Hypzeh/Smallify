                                  Stroke="#000000"
                                  StrokeEndLineCap="Round"
                                  StrokeStartLineCap="Round"
                                  StrokeThickness="2" />
                        </Canvas>
                    </Viewbox>
                    <Image Source="{Binding Path=TrackAlbumArtURL, Mode=OneWay}" />
                </Grid>
            </Border>

            <Border x:Name="TrackDetails"
                    Grid.Column="1">
                <StackPanel Margin="5,0,0,0"
                            VerticalAlignment="Center">
                    <TextBlock FontSize="16"
                               FontWeight="Normal"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               Text="{Binding Path=TrackName, Mode=OneWay, FallbackValue='...'}" />
                    <TextBlock FontSize="14"
                               FontWeight="Light"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Text="{Binding Path=TrackArtist, Mode=OneWay, FallbackValue='...'}" />
                    <TextBlock FontSize="14"
                               FontWeight="Light"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Text="{Binding Path=TrackAlbumName, Mode=OneWay, FallbackValue='...'}" />
                </StackPanel>
            </Border>

            <Border x:Name="PlayerControls"
                    Grid.Column="2"
                    MinHeight="50"
                    MaxHeight="100">
                <UniformGrid Columns="3">
                    <Button Command="{Binding Path=PreviousCommand, Mode=OneWay}"
                            Style="{StaticResource ButtonStyle}">
                        <Viewbox>
                            <Path Margin="200"
                                  Data="{StaticResource Previous}"
                                  Fill="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}, Path=Foreground}" />
                        </Viewbox>
                    </Button>

                    <Grid>
                        <Button Command="{Binding Path=PlayCommand, Mode=OneWay}"
                                Style="{StaticResource ButtonStyle}">
                            <Viewbox>
                                <Path Margin="20"
                                      Data="{StaticResource Play}"
                                      Fill="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}, Path=Foreground}" />
                            </Viewbox>
                        </Button>
                        <Button Command="{Binding Path=PauseCommand, Mode=OneWay}"
                                Style="{StaticResource ButtonStyle}"
                                Visibility="{Binding Path=IsPlaying, Converter={StaticResource BoolToVisibility}}">
                            <Viewbox>
                                <Path Margin="20"
                                      Data="{StaticResource Pause}"
                                      Fill="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}, Path=Foreground}" />
                            </Viewbox>
                        </Button>
                    </Grid>

                    <Button Command="{Binding Path=SkipCommand, Mode=OneWay}"
                            Style="{StaticResource ButtonStyle}">
                        <Viewbox>
                            <Path Margin="200"
                                  Data="{StaticResource Skip}"
                                  Fill="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}, Path=Foreground}" />
                        </Viewbox>
                    </Button>
                </UniformGrid>
            </Border>
        </Grid>
    </Border>
</UserControl>
