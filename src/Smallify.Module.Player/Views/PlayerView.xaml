                                  Fill="#1ed760"
                                  Stretch="None" />
                            <Path Data="m 15.203243,15.202242 c -0.133891,0.219582 -0.421308,0.289203 -0.640889,0.154421 C 12.80732,14.284649 10.597948,14.04186 7.996009,14.636331 7.7452791,14.693461 7.4953488,14.536361 7.4382242,14.285539 7.3808112,14.034717 7.5373012,13.78479 7.78866,13.727664 c 2.847399,-0.650531 5.289832,-0.37043 7.260163,0.833689 0.21958,0.134786 0.289203,0.42131 0.15442,0.640889 z m 0.914918,-2.035313 c -0.168701,0.274207 -0.527528,0.360791 -0.801557,0.19209 -2.009252,-1.235007 -5.072036,-1.592671 -7.4485947,-0.87127 -0.308215,0.0931 -0.6337456,-0.0806 -0.7272909,-0.388283 -0.092831,-0.308214 0.080962,-0.633124 0.3886391,-0.726846 2.7146735,-0.823696 6.0895155,-0.424702 8.3968945,0.993199 0.274028,0.168702 0.360611,0.52753 0.191909,0.801201 z m 0.07854,-2.119395 C 13.787575,9.6166021 9.812837,9.4850981 7.5126645,10.183136 7.1433269,10.295222 6.752702,10.086647 6.6407728,9.7172871 6.5288369,9.3477511 6.7371758,8.9574141 7.1068015,8.8451261 9.747205,8.0435685 14.043969,8.3331871 16.817643,9.9797721 c 0,0 0.520224,0.1734079 0.337187,0.8232769 -0.104626,0.37147 -0.626607,0.441751 -0.957762,0.244485 z"
