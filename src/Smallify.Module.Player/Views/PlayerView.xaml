<UserControl x:Class="Smallify.Module.Player.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Smallify.Module.Player.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="200"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    </UserControl.Resources>

    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="5" />
            </Grid.RowDefinitions>

            <Border x:Name="AlbumArt"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}">
                <Image Source="http://placekitten.com/200/200" />
            </Border>

            <Border x:Name="TrackDetails"
                    Grid.Column="1">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock FontSize="28"
                               Foreground="White"
                               Text="{Binding Path=TrackName, Mode=OneWay, FallbackValue='...'}" />
                    <TextBlock FontSize="28"
                               Foreground="White"
                               Text="{Binding Path=TrackArtist, Mode=OneWay, FallbackValue='...'}" />
                    <TextBlock FontSize="28"
                               Foreground="White"
                               Text="{Binding Path=TrackAlbumName, Mode=OneWay, FallbackValue='...'}" />
                </StackPanel>
            </Border>

            <Border x:Name="PlayerControls"
                    Grid.Column="2"
                    MinHeight="50"
                    MaxHeight="100">
                <UniformGrid Columns="3">
                    <Button Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                            Command="{Binding Path=PreviousCommand, Mode=OneWay}"
                            Content="Previous" />
                    <Grid>
                        <Button Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                                Command="{Binding Path=PlayCommand, Mode=OneWay}"
                                Content="Play" />
                        <Button Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                                Command="{Binding Path=PauseCommand, Mode=OneWay}"
                                Content="Pause"
                                Visibility="{Binding Path=IsPlaying, Converter={StaticResource BoolToVisibility}}" />
                    </Grid>
                    <Button Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                            Command="{Binding Path=SkipCommand, Mode=OneWay}"
                            Content="Next" />
                </UniformGrid>
            </Border>

            <Border x:Name="TrackLength"
                    Grid.Row="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="2">
                <Border Background="Green" />
            </Border>
        </Grid>
    </Border>
</UserControl>
